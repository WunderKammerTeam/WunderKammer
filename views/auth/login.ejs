 
<main class="container-fluid WK-background-light-1 pt-5 pb-5">
  <div class="container mt-5 mb-5">
    <div class="row">

      <div class="col-md-3"></div>
      <div class="col-md-6 text-center mt-5 mb-5">
        <form class="form-signin" action="/login" method="POST">
          <img class="mb-4" src="./images/w.png" alt="" width="72" height="72">
          
          <% if (showFavMessage) { %>
            <h1 class="h3 mb-3 font-weight-normal">Please log in or sign up if you want to add favourites or create Wonder collections!! </h1>
          <% } else{ %>
            <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
          <% } %>

          <div class="form-group <%= typeof error != 'undefined' && error.email ? 'has-error' : '' %>">
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus value="<%= typeof user != 'undefined' && user.email ? user.email : '' %>">
            <% if (typeof(error) != 'undefined' && error.email) { %>
              <label for="inputEmail" class="control-label"> <%= error.email %> </label>
            <% } else{ %>
              <label for="inputEmail" class="sr-only">Email address</label>
            <% } %>
          </div>

          <div class="form-group <%= typeof error != 'undefined' && error.password ? 'has-error' : '' %>">
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
            <% if (typeof(error) != 'undefined' && error.password) { %>
              <label class="control-label"><%= error.password %></label>
            <% } else{ %>
              <label for="inputPassword" class="sr-only">Password</label>
            <% } %>
          </div>

          <div class="checkbox mb-3">
              <label>
                <input type="checkbox" value="remember-me"> Remember me
              </label>
          </div>

          <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>

          <div class="mt-3 mb-5 text-center">
              Dont't have an account?
              <a href="/signup"> Sign up </a>
          </div>
          
          <p class="mt-5 mb-5 text-muted"> Â© 2018 WunderKammer, inc</p>

        </form>
      </div>
      <div class="col-md-3"></div>
  </div>
</main>