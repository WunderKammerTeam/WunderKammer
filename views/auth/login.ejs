<h2> Log In </h2>

<% if (typeof(errorMessage) !== 'undefined' && errorMessage) { %>
  <p class="error-message">
    <%= errorMessage %>
  </p>
<% } %>

<form action="/login" method="post">
  <div>
    <label for="email-input"> Email </label>
    <input type="email" name="email" id="email-input"
      placeholder="e.g., xena@warrior.company" value="<%= typeof user != 'undefined' && user.name ? user.email : '' %>">
    <% if (typeof(error) != 'undefined' && error.email) { %>
        <label class="control-label"> <%= error.email %> </label>
    <% } %>
  </div>

  <div>
    <label for="password-input"> Password </label>
    <input type="password" name="password" id="password-input"
      placeholder="e.g., ••••••••••••">
    <% if (typeof(error) != 'undefined' && error.password) { %>
        <label class="control-label"> <%= error.password %> </label>
    <% } %>
  </div>

  <button> Log In </button>
</form>

<p>
  Don't have an account?
  <a href="/signup">
    Create an account.
  </a>
</p>