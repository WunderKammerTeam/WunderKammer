
<!DOCTYPE html>
<html>
<head>
  <title>WunderKammer</title>
  <!-- CSS Matarialize - info y tutos en: http://materializecss.com -->
  <!-- Compiled and minified -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <!-- Icons from Materialize -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- CSS customization  -->
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

</head>

<body>

  <!-- Este es el header con el Nav que va a ser común para todas las vistas -->

  <header class="container teal lighten-3">

    <nav>
        <div class="nav-wrapper">
          <a class="brand-logo" href="/"><img src="/images/w.png" height="50" alt="Wonder Logo"> WunderKammer </a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/products">Products</a></li>
            <li><a href="#">Categories</a></li>
            <% if (!session.email) { %>
              <li><a href="/login" class="waves-effect waves-light btn">Login <i class="material-icons right">touch_app</i></a></li>
              <li><a href="/signup">Signup</a></li>
            <% } else { %>
              <li><span>Hola <%= session.name %></span>
              <li><a href="/create">New Product</a></li>
              <li>><a href="/logout">logout</a></li>
            <% } %>
          </ul>
        </div>
      </nav>

  </header>



  <!-- Aquí va la parte variable que envía cada vista -->
  <main class="container-fluid color3">
    <div class="container">
        <%- body %>
    </div>
  </main>




  <!-- Este es el footer que va a ser común para todas las vistas -->

  <footer class="page-footer center-on-small-only blue">

      <!--Footer Links-->
      <div class="container-fluid">
          <div class="row">

              <!--First column-->
              <div class="col-md-4">
                  <h5 class="title">Footer Content</h5>
                  <a href="/">
                    <img src="/images/unicornProud.jpg" height="80" class="d-inline-block align-top" alt="Wonder Unicorn">
                  </a>
                  <p>Bizarre products curated from Amazon just for you.</p>
                  <p>© 2018 Wunder Incorporated,  All rights reserved</p>
              </div>
              <!--/.First column-->

              <!--Second column-->
              <div class="col-md-4">
                  <h5 class="title">Categories</h5>
                  <ul>
                      <li><a href="#!">Toys</a></li>
                      <li><a href="#!">Wear</a></li>
                      <li><a href="#!">Unicorn Stuff</a></li>
                      <li><a href="#!">Decoration</a></li>
                  </ul>
              </div>
              <!--/.Second column-->

              <!--Third column-->
              <div class="col-md-4">
                  <h5 class="title">Legal Stuff</h5>
                  <ul>
                      <li><a href="#">Terms & Condition</a></li>
                      <li><a href="#">Privacy Policy</a></li>
                      <li><a href="#">About Us</a></li>
                      <li><a href="#">Contacts</a></li>
                  </ul>
              </div>
              <!--/.Third column-->
          </div>
      </div>
      <!--/.Footer Links-->

      <div class="">
          <h4>Follow Us</h4>
          <ul>
              <li><a href="#">Facebook</a></li>
              <li><a href="#">Twitter</a></li>
              <li><a href="#">Instagram</a></li>
              <li><a href="#">RSS</a></li>
            </ul>
        </div>


      <!--Copyright-->
      <div class="footer-copyright">
          <div class="container-fluid">
              © 2018 Copyright: <a href="/"> WunderKammer.biz</a>
          </div>
      </div>
      <!--/.Copyright-->

  </footer>



  <!-- Compiled and minified JavaScript for Matarialize-->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
</body>

</html>
