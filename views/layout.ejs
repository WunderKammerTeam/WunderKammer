
<!DOCTYPE html>
<html>
<head>
  <title>WunderKammer</title>
  <!-- CSS MDBootstrap info y tutos en: https://mdbootstrap.com/ -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.3.2/css/mdb.min.css" />
  <!-- CSS customization
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"> 
  -->
</head>

<body>

  <!-- Este es el header con el Nav que va a ser común para todas las vistas -->

  <header class="container default-color">

      <nav class="navbar navbar-expand-lg navbar-dark">
          <a class="navbar-brand" href="/">
            <img src="/images/w.png" height="30" class="d-inline-block align-top" alt="Wonder Logo">
            WunderKammer
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
              aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                  <a class="nav-item nav-link active" href="/">Home <span class="sr-only">(current)</span></a>
                  <a class="nav-item nav-link" href="#">Products</a>
                  <a class="nav-item nav-link" href="#">Categories</a>
              </div>

              <form class="form-inline waves-effect waves-light">
                  <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
              </form>

              <div class="navbar-nav">  <!-- justify-content-end -->
                <% if (!session.email) { %>
                  <a class="nav-item nav-link" href="/login">Login</a>
                  <a class="nav-item nav-link" href="/signup">Signup</a>
                <% } else { %>
                  <span>Hola <%= session.name %></span>
                  <a class="nav-item nav-link" href="/create">New Product</a>
                  <a class="nav-item nav-link" href="/logout">logout</a>
                <% } %>
              </div>

          </div>

      </nav>
  </header>



  <!-- Aquí va la parte variable que envía cada vista -->
  <main class="container-fluid color3">
    <div class="container">
        <%- body %>
    </div>
  </main>




  <!-- Este es el footer que va a ser común para todas las vistas -->

  <footer class="page-footer center-on-small-only blue">

      <!--Footer Links-->
      <div class="container-fluid">
          <div class="row">
  
              <!--First column-->
              <div class="col-md-4">
                  <h5 class="title">Footer Content</h5>
                  <a href="/">
                    <img src="/images/unicornProud.jpg" height="80" class="d-inline-block align-top" alt="Wonder Unicorn">
                  </a>
                  <p>Bizarre products curated from Amazon just for you.</p>
                  <p>© 2018 Wunder Incorporated,  All rights reserved</p>
              </div>
              <!--/.First column-->
  
              <!--Second column-->
              <div class="col-md-4">
                  <h5 class="title">Categories</h5>
                  <ul>
                      <li><a href="#!">Toys</a></li>
                      <li><a href="#!">Wear</a></li>
                      <li><a href="#!">Unicorn Stuff</a></li>
                      <li><a href="#!">Decoration</a></li>
                  </ul>
              </div>
              <!--/.Second column-->

              <!--Third column-->
              <div class="col-md-4">
                  <h5 class="title">Legal Stuff</h5>
                  <ul>
                      <li><a href="#">Terms & Condition</a></li>
                      <li><a href="#">Privacy Policy</a></li>
                      <li><a href="#">About Us</a></li>
                      <li><a href="#">Contacts</a></li>
                  </ul>
              </div>
              <!--/.Third column-->
          </div>
      </div>
      <!--/.Footer Links-->

      <div class="">
          <h4>Follow Us</h4>
          <ul>
              <li><a href="#">Facebook</a></li>
              <li><a href="#">Twitter</a></li>
              <li><a href="#">Instagram</a></li>
              <li><a href="#">RSS</a></li>
            </ul>
        </div>

  
      <!--Copyright-->
      <div class="footer-copyright">
          <div class="container-fluid">
              © 2018 Copyright: <a href="/"> WunderKammer.biz</a>
          </div>
      </div>
      <!--/.Copyright-->
  
  </footer>



  <!-- Javascripts for MDBootstrap-->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.3.2/js/mdb.min.js"></script>
</body>

</html>
