<main class="container-fluid K-background-light-1">
    <div class="container my-5">

      <script type="text/javascript">
        $('#carouselShow').carousel({
          interval: 2000
          });
      </script>

      <div class="row">
        <div class="col-md-4">
          <div id="carouselShow" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <% for (let i = 0; i < product.images_array.length; i++){ %>
              <div class="carousel-item active">
                <img class="d-block w-100" src="<%= product.images_array[i] %>">
              </div>
              <% } %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true" ></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

          

      </div>
      <div class="col-md-8">
        <h1 class="display-5 WK-text-color2 mb-3"><%= product.name %></h1>
        <% for (let d = 0; d < product.description.length; d++){ %>
        <p class= "WK-text-color2"></p> <%= product.description[d] %> </p>
        <% } %>

        <h3 class="WK-text-color2 mt-1">Price: <%= product.price %> </h3>
        <h3 class="WK-text-color2 mt-1 mb-3">Category: <%= product.category %></h3>

        <div style="font-size:3em; color:Tomato">
          <i class="fas fa-heart"></i>
          <span class="fa-layers-counter" style="background:Tomato">1,419</span>
        </div>

        <div>
            <a class="btn btn-warning btn-lg mt-5" href="<%= product.url_amazon %>" role="button"><i class="fab fa-amazon" ></i>  Get it at Amazon!!!!  </a>
        </div>
        <div class="display-5 my-5 text-left">
          <a href="/products">Back</a>
        </div>
      </div>

    </div> 

  </div>
</main>
